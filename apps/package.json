{
	"name": "client",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "NODE_OPTIONS='--max-old-space-size=1536' vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . && prettier .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "node --no-deprecation node_modules/.bin/vitest",
		"test:watch": "node --no-deprecation node_modules/.bin/vitest --watch",
		"test:coverage": "node --no-deprecation node_modules/.bin/vitest --coverage",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
		"changelog:first": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-node": "^5.2.11",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
		"@tailwindcss/typography": "^0.5.14",
		"@testing-library/jest-dom": "^6.5.0",
		"@testing-library/svelte": "^5.2.1",
		"@types/better-sqlite3": "^7.6.10",
		"@types/eslint": "^9.6.0",
		"@types/node": "^22.10.2",
		"@types/sqlite3": "^3.1.11",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.12.2",
		"@typescript-eslint/parser": "^8.12.2",
		"@vitest/coverage-v8": "^2.1.2",
		"autoprefixer": "^10.4.20",
		"conventional-changelog-cli": "^5.0.0",
		"dotenv": "^16.4.7",
		"drizzle-kit": "^0.24.2",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"flowbite": "^3.1.2",
		"flowbite-svelte": "^1.3.1",
		"flowbite-svelte-blocks": "^2.0.0",
		"flowbite-svelte-icons": "^2.1.1",
		"flowbite-typography": "^1.0.5",
		"globals": "^15.0.0",
		"jsdom": "^25.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"svelte": "^5.30.2",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.4.16",
		"tsx": "^4.19.2",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.3",
		"vitest": "^2.1.1"
	},
	"type": "module",
	"dependencies": {
		"@auth/drizzle-adapter": "^1.7.2",
		"@auth/sveltekit": "^1.9.2",
		"@casl/ability": "^6.7.1",
		"@libsql/client": "^0.14.0",
		"@statsig/js-client": "^3.17.2",
		"@statsig/session-replay": "^3.17.2",
		"@statsig/web-analytics": "^3.17.2",
		"@sveltejs/kit": "^2.15.0",
		"@types/html2canvas": "^0.5.35",
		"better-sqlite3": "^11.2.1",
		"drizzle-orm": "^0.31.4",
		"html2canvas": "^1.4.1",
		"pino": "^9.4.0",
		"pino-pretty": "^11.2.2",
		"punycode": "^2.3.1",
		"sqlite3": "^5.1.7",
		"svelte-eslint-parser": "^0.43.0",
		"svelte-tags-input": "^6.0.1",
		"uuid": "^10.0.0",
		"winston": "^3.14.2"
	}
}
